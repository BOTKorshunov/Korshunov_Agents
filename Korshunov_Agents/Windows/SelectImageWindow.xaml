<Window x:Class="Korshunov_Agents.Windows.SelectImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Korshunov_Agents.Windows"
        mc:Ignorable="d"
        Style="{StaticResource windowStyle}"
        Title="Выберите картинку" Height="400" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0">
            <StackPanel Orientation="Vertical" Name="spImages"/>
        </ScrollViewer>

        <Button Grid.Row="1" Content="Сохранить" IsDefault="True"
                Name="btnSave" Click="btnSave_Click"/>
    </Grid>
</Window>
